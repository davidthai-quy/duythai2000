<% include layout/header%>

    <!--	List Product	-->
    <div id="product">
        <div id="product-head" class="row">
            <div id="product-img" class="col-lg-6 col-md-6 col-sm-12">
                <img src="/static/images/products/<%=data.product.prd_image%>">
            </div>
            <div id="product-details" class="col-lg-6 col-md-6 col-sm-12">
                <h1><%=data.product.prd_name%></h1>
                <ul>
                    <li><span>Bảo hành:</span> <%=data.product.prd_warranty%></li>
                    <li><span>Đi kèm:</span> <%=data.product.prd_accessories%></li>
                    <li><span>Tình trạng:</span> <%=data.product.prd_new%></li>
                    <li><span>Khuyến Mại:</span> <%=data.product.prd_promotion%></li>
                    <li id="price">Giá Bán (chưa bao gồm VAT)</li>
                    <li id="price-number"><%=data.product.prd_price%>đ</li>
                    <li id="status"><%if(data.product.prd_status==1){%>Còn hàng<%}else{%>Hết hàng<%}%></li>
                </ul>
                <div id="add-cart"><a href="#">Mua ngay</a></div>
            </div>
        </div>
        <div id="product-body" class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <h3>Đánh giá về <%=data.product.prd_name%></h3>
                <%=data.product.prd_details%>
            </div>
        </div>

        <!--	Comment	-->
        <div id="comment" class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <h3>Bình luận sản phẩm</h3>
                <form method="post">
                    <div class="form-group">
                        <label>Tên:</label>
                        <input name="comm_name" required type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input name="comm_mail" required type="email" class="form-control" id="pwd">
                    </div>
                    <div class="form-group">
                        <label>Nội dung:</label>
                        <textarea name="comm_details" required rows="8" class="form-control"></textarea>
                    </div>
                    <button type="submit" name="sbm" class="btn btn-primary">Gửi</button>
                </form>
            </div>
        </div>
        <!--	End Comment	-->

        <!--	Comments List	-->
        <div id="comments-list" class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <%
                for(key in data.comments){
                %>
                <div class="comment-item">
                    <ul>
                        <li><b><%=data.comments[key].comm_name%></b></li>
                        <li><%=data.comments[key].toObject.comm_date%></li>
                        <li>
                            <p><%=data.comments[key].comm_details%></p>
                        </li>
                    </ul>
                </div>
                <%
                }
                %>
            </div>
        </div>
        <!--	End Comments List	-->
    </div>
    <!--	End Product	-->
    <div id="pagination">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Trang trước</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Trang sau</a></li>
        </ul>
    </div>
</div>

<% include layout/footer%>